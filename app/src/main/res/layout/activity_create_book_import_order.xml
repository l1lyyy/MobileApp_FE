<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_2">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="46dp"
            android:clickable="true">

            <View
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackground" />

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/arrow_back"
                android:contentDescription="back_button"
                android:onClick="goToDashboardActivity" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="55dp"
                android:fontFamily="@font/capriola"
                android:letterSpacing="0.02"
                android:text="Import book"
                android:textColor="#1E1E1E"
                android:textSize="24sp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="46dp"
            android:clickable="true">

            <View
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackground" />

            <ImageButton
                android:id="@+id/check_square_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/check_square"
                android:contentDescription="check_button"
                android:clickable="true" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="115dp"
                android:fontFamily="@font/capriola"
                android:letterSpacing="0.05"
                android:text="Date:"
                android:textColor="#1E1E1E"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/date_input"
                android:layout_width="220dp"
                android:layout_height="48dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/input_rectangle"
                android:hint="dd/mm/yyyy"
                android:padding="10dp"
                android:letterSpacing="0.05"
                android:textColor="#000"
                android:textSize="17sp"
                android:inputType="date"
                android:maxLines="1"
                android:singleLine="true" />

            <ImageButton
                android:id="@+id/calendar_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="285dp"
                android:layout_marginTop="102dp"
                android:background="@drawable/calendar"
                android:contentDescription="calendar_button" />
        </FrameLayout>

        <ImageView
            android:layout_width="320dp"
            android:layout_height="3dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="185dp"
            android:src="@drawable/dash_line" />

        <FrameLayout
            android:id="@+id/book_import_slots_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-5dp"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <View
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackground" />

            <ImageView
                android:id="@+id/book_import_info_1"
                android:layout_width="290dp"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="205dp"
                android:background="@drawable/input_rectangle" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="310dp"
                android:layout_marginTop="206dp"
                android:clickable="true">

                <View
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackground" />

                <ImageButton
                    android:id="@+id/edit_button_1"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:background="@drawable/pencil"
                    android:contentDescription="edit_pencil"
                    android:onClick="goToEditActivity" />
            </FrameLayout>

            <TextView
                android:id="@+id/book_ID_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="220dp"
                android:fontFamily="@font/capriola"
                android:letterSpacing="0.05"
                android:text="ID"
                android:textColor="#1E1E1E"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/book_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="220dp"
                android:fontFamily="@font/capriola"
                android:letterSpacing="0.05"
                android:text="Book"
                android:textColor="#1E1E1E"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/author_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="220dp"
                android:fontFamily="@font/capriola"
                android:letterSpacing="0.05"
                android:text="Author"
                android:textColor="#1E1E1E"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/amount_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="235dp"
                android:layout_marginTop="220dp"
                android:fontFamily="@font/capriola"
                android:letterSpacing="0.05"
                android:text="Amount"
                android:textColor="#1E1E1E"
                android:textSize="14sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/add_slot_button_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="265dp"
            android:clickable="true"
            android:focusable="false"
            android:contentDescription="add_slot">

            <View
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackground" />

            <ImageButton
                android:id="@+id/add_slot"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/add_circle"
                android:contentDescription="add_slot"
                android:onClick="goToAddSlotActivity"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/capriola"
                android:letterSpacing="0.05"
                android:text="Add slot"
                android:textColor="#1E1E1E"
                android:textSize="16sp" />

            <!-- Add an extra space to increase height by 200dp -->
            <View
                android:layout_width="match_parent"
                android:layout_height="150dp" />
        </FrameLayout>

        </RelativeLayout>
    </ScrollView>
</LinearLayout>
