<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="800dp"
    android:id="@+id/signup"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="@drawable/gradient">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="top|start"
            android:layout_marginLeft="103dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/sign_up_title" />

        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="55dp"
            android:background="@null"
            android:onClick="goToWelcomeActivity"
            android:src="@drawable/arrow_back"/>


        <ImageButton
            android:id="@+id/signup_button"
            android:layout_width="245dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="635dp"
            android:background="@null"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:src="@drawable/blue_rectangle" />

        <TextView
            android:layout_width="98dp"
            android:layout_height="30dp"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="190dp"
            android:text="Username"
            android:textColor="#1E1E1E"
            android:textSize="17sp"/>

        <EditText
            android:id="@+id/signup_username_input"
            android:layout_width="275dp"
            android:layout_height="62dp"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="218dp"
            android:background="@drawable/input_rectangle"
            android:textColor="@color/black"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textSize="16dp"/>

        <TextView
            android:layout_width="198dp"
            android:layout_height="30dp"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="300dp"
            android:text="Email address"
            android:textColor="#1E1E1E"
            android:textSize="17sp"/>

        <EditText
            android:id="@+id/signup_email_input"
            android:layout_width="275dp"
            android:layout_height="62dp"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="328dp"
            android:background="@drawable/input_rectangle"
            android:textColor="@color/black"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textSize="16dp"/>

        <TextView
            android:layout_width="198dp"
            android:layout_height="30dp"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="410dp"
            android:text="Password"
            android:textColor="#1E1E1E"
            android:textSize="17sp"/>

        <EditText
            android:id="@+id/signup_password_input"
            android:layout_width="275dp"
            android:layout_height="62dp"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="438dp"
            android:background="@drawable/input_rectangle"
            android:textColor="@color/black"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textSize="16dp"
            android:inputType="textPassword"
            />

        <TextView
            android:layout_width="198dp"
            android:layout_height="30dp"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="520dp"
            android:text="Confirm password"
            android:textColor="#1E1E1E"
            android:textSize="17sp"/>

        <EditText
            android:id="@+id/signup_confirm_password_input"
            android:layout_width="275dp"
            android:layout_height="62dp"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="548dp"
            android:background="@drawable/input_rectangle"
            android:inputType="textPassword"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:layout_width="154dp"
            android:layout_height="35dp"
            android:layout_marginLeft="146dp"
            android:layout_marginTop="655dp"
            android:text="Sign Up"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="715dp"
            android:src="@drawable/already_have_account"
            android:background="@null"
            android:onClick="goToSignInActivity"/>
        <!--
        <Button
            android:layout_marginLeft="65dp"
            android:layout_marginTop="688dp"
            android:id="@+id/supabutton_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sign_in_button"
            />

        <Button
            android:layout_marginLeft="185dp"
            android:layout_marginTop="688dp"
            android:id="@+id/supabutton_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sign_up_button" />
        -->
    </RelativeLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="800dp"
        android:layout_weight="0"
        android:orientation="vertical">

    </LinearLayout>

    <View
        android:layout_width="380dp"
        android:layout_height="800dp" />

</LinearLayout>