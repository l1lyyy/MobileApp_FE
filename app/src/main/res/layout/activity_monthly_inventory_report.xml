<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_2">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="46dp"
            android:clickable="true">

            <View
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackground" />

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/arrow_back"
                android:contentDescription="back_button"
                android:onClick="goToMonthlyReportActivity"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="55dp"
                android:fontFamily="@font/capriola"
                android:letterSpacing="0.02"
                android:text="Inventory report"
                android:textColor="#1E1E1E"
                android:textSize="22sp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="46dp"
            android:clickable="true">

            <View
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackground" />

            <ImageButton
                android:id="@+id/check_square_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/check_square"
                android:contentDescription="check_button"
                android:clickable="true"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="115dp"
                android:fontFamily="@font/capriola"
                android:letterSpacing="0.05"
                android:text="Month:"
                android:textColor="#1E1E1E"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/date_input"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/input_rectangle"
                android:hint="mm/yyyy"
                android:padding="10dp"
                android:letterSpacing="0.05"
                android:textColor="#000"
                android:textSize="18sp"
                android:inputType="date"
                android:maxLines="1"
                android:singleLine="true"/>

            <ImageButton
                android:id="@+id/calendar_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="285dp"
                android:layout_marginTop="102dp"
                android:background="@drawable/calendar"
                android:contentDescription="calendar_button" />
        </FrameLayout>

        <ImageView
            android:layout_width="320dp"
            android:layout_height="3dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="185dp"
            android:src="@drawable/dash_line" />

        <ImageView
            android:id="@+id/book_import_info_1"
            android:layout_width="290dp"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="205dp"
            android:background="@drawable/input_rectangle"
            android:fontFamily="@font/capriola"
            android:hint="Book name"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="16dp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="206dp"
            android:clickable="true">

            <View
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackground" />

            <ImageButton
                android:id="@+id/edit_button_1"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:background="@drawable/pencil"
                android:contentDescription="edit_pencil"
                android:onClick="goToEditActivity"/>
        </FrameLayout>

        <TextView
            android:id="@+id/book_name_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="220dp"
            android:fontFamily="@font/capriola"
            android:letterSpacing="0.05"
            android:text="Book"
            android:textColor="#1E1E1E"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/author_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="220dp"
            android:fontFamily="@font/capriola"
            android:letterSpacing="0.05"
            android:text="Begin"
            android:textColor="#1E1E1E"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/category_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="220dp"
            android:fontFamily="@font/capriola"
            android:letterSpacing="0.05"
            android:text="Arise"
            android:textColor="#1E1E1E"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/amount_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="265dp"
            android:layout_marginTop="220dp"
            android:fontFamily="@font/capriola"
            android:letterSpacing="0.05"
            android:text="End"
            android:textColor="#1E1E1E"
            android:textSize="14sp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="265dp"
            android:clickable="true"
            android:contentDescription="add_slot_button"
            android:onClick="goToAddSlotActivity">

            <View
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackground" />

            <ImageButton
                android:id="@+id/add_slot"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/add_circle"
                android:contentDescription="add_slot" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="-4dp"
                android:fontFamily="@font/capriola"
                android:textColor="@color/black"
                android:letterSpacing="0.05"
                android:text="Add slot"
                android:textSize="14sp"
                android:padding="16dp"
                android:clickable="true"/>
        </FrameLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
