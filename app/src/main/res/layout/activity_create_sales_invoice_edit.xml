<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_3">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="46dp"
            android:clickable="true">

            <View
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackground" />

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/arrow_back"
                android:contentDescription="back_button" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="55dp"
                android:fontFamily="@font/capriola"
                android:letterSpacing="0.02"
                android:text="Sales invoice"
                android:textColor="#1E1E1E"
                android:textSize="24sp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="46dp"
            android:clickable="true">

            <View
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackground" />

            <ImageButton
                android:id="@+id/check_square_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/check_square"
                android:contentDescription="check_button" />
        </FrameLayout>

        <ImageView
            android:layout_width="280dp"
            android:layout_height="200dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="120dp"
            android:src="@drawable/shadow_rectangle" />

        <ImageView
            android:layout_width="320dp"
            android:layout_height="280dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="64dp"
            android:src="@drawable/shopping_girl" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="350dp"
            android:text="Book"
            android:textColor="#1E1E1E"
            android:textSize="17sp"
            android:fontFamily="@font/capriola"
            android:letterSpacing="0.02"/>

        <EditText
            android:id="@+id/book_input"
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="380dp"
            android:background="@drawable/input_rectangle"
            android:hint="Book name"
            android:fontFamily="@font/capriola"
            android:textSize="16dp"
            android:padding="10dp"
            android:textColor="#000"/>

        <TextView
            android:layout_width="98dp"
            android:layout_height="30dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="450dp"
            android:text="Categories"
            android:textColor="#1E1E1E"
            android:textSize="17sp"
            android:fontFamily="@font/capriola"
            android:letterSpacing="0.02"/>

        <EditText
            android:id="@+id/categories_input"
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="480dp"
            android:background="@drawable/input_rectangle"
            android:hint="Categories"
            android:fontFamily="@font/capriola"
            android:textSize="16dp"
            android:padding="10dp"
            android:textColor="#000"/>

        <TextView
            android:layout_width="98dp"
            android:layout_height="30dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="550dp"
            android:text="Amount"
            android:textColor="#1E1E1E"
            android:textSize="17sp"
            android:fontFamily="@font/capriola"
            android:letterSpacing="0.02"/>

        <EditText
            android:id="@+id/amount_input"
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="580dp"
            android:background="@drawable/input_rectangle"
            android:hint="Amount"
            android:fontFamily="@font/capriola"
            android:textSize="16dp"
            android:padding="10dp"
            android:textColor="#000"/>

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="635dp"
            android:max="1000"
            android:progressTint="@color/purple"
            android:thumbTint="@color/purple"/>

        <TextView
            android:id="@+id/seekBarValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seekBar"
            android:layout_marginTop="-5dp"
            android:layout_marginLeft="320dp"
            android:text="0"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="98dp"
            android:layout_height="30dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="670dp"
            android:text="Price"
            android:textColor="#1E1E1E"
            android:textSize="17sp"
            android:fontFamily="@font/capriola"
            android:letterSpacing="0.02"/>

        <EditText
            android:id="@+id/price_input"
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="700dp"
            android:background="@drawable/input_rectangle"
            android:hint="Price"
            android:fontFamily="@font/capriola"
            android:textSize="16dp"
            android:padding="10dp"
            android:textColor="#000"/>




    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>

