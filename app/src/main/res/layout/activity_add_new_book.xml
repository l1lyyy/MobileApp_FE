<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="800dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="@drawable/gradient_2">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="46dp"
            android:clickable="true">

            <View
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackground"/>

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/arrow_back"
                android:contentDescription="back_button"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:text="Add new book"
                android:textColor="#1E1E1E"
                android:textSize="24sp"
                android:fontFamily="@font/capriola"
                android:letterSpacing="0.02"
                android:layout_gravity="top|center_horizontal"/>
        </FrameLayout>

        <ImageView
            android:layout_width="320dp"
            android:layout_height="600dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="300dp"
            android:src="@drawable/gradient_rectangle" />

        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="292dp"
            android:layout_marginTop="46dp"
            android:clickable="true">

            <View
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackground"/>

            <ImageButton
                android:id="@+id/check_square_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/check_square"
                android:contentDescription="check_button"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/upload_image_frame"
            android:layout_width="120dp"
            android:layout_height="200dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="110dp"
            android:background="@drawable/rectangle"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@drawable/picture"
                android:contentDescription="picture_icon"/>
        </FrameLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="95dp"
            android:clickable="true"
            android:fontFamily="@font/capriola"
            android:letterSpacing="0.05"
            android:padding="15dp"
            android:text="Catagories"
            android:textColor="#000000"
            android:textSize="18sp"/>


        <ImageButton
            android:id="@+id/cat_1_button"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/purple_button"
            android:layout_gravity="top|start"
            android:contentDescription="cat_1"/>

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="150dp"
            android:fontFamily="@font/capriola"
            android:padding="16dp"
            android:text="Vietnamese book"
            android:gravity="top|center_horizontal"
            android:textColor="#333333"
            android:textSize="13sp"
            android:scaleType="center"
            android:clickable="true" />

        <ImageButton
            android:id="@+id/cat_3_button"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="210dp"
            android:padding="12dp"
            android:background="@drawable/purple_button"
            android:layout_gravity="top|start"
            android:contentDescription="cat_3"/>

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="210dp"
            android:fontFamily="@font/capriola"
            android:padding="16dp"
            android:text="Foreign book"
            android:gravity="top|center_horizontal"
            android:textColor="#333333"
            android:textSize="13sp"
            android:clickable="true" />


        <TextView
            android:layout_width="98dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="340dp"
            android:text="Book"
            android:textColor="#1E1E1E"
            android:textSize="17sp"
            android:fontFamily="@font/capriola"
            android:letterSpacing="0.02"/>

        <EditText
            android:id="@+id/book_input"
            android:layout_width="290dp"
            android:layout_height="48dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="370dp"
            android:background="@drawable/input_rectangle"
            android:hint="Book name"
            android:fontFamily="@font/capriola"
            android:textSize="16dp"
            android:padding="10dp"
            android:textColor="#000"/>

        <TextView
            android:layout_width="98dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="440dp"
            android:text="Author"
            android:textColor="#1E1E1E"
            android:textSize="17sp"
            android:fontFamily="@font/capriola"
            android:letterSpacing="0.02"/>

        <EditText
            android:id="@+id/author_input"
            android:layout_width="290dp"
            android:layout_height="48dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="470dp"
            android:background="@drawable/input_rectangle"
            android:hint="Author name"
            android:fontFamily="@font/capriola"
            android:textSize="16dp"
            android:padding="10dp"
            android:textColor="#000"/>

        <TextView
            android:layout_width="98dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="540dp"
            android:text="Publisher"
            android:textColor="#1E1E1E"
            android:textSize="17sp"
            android:fontFamily="@font/capriola"
            android:letterSpacing="0.02"/>

        <EditText
            android:id="@+id/publisher_input"
            android:layout_width="290dp"
            android:layout_height="48dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="570dp"
            android:background="@drawable/input_rectangle"
            android:hint="Publisher name"
            android:fontFamily="@font/capriola"
            android:textSize="16dp"
            android:padding="10dp"
            android:textColor="#000"/>

        <TextView
            android:layout_width="98dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="640dp"
            android:text="Price"
            android:textColor="#1E1E1E"
            android:textSize="17sp"
            android:fontFamily="@font/capriola"
            android:letterSpacing="0.02"/>

        <EditText
            android:id="@+id/price_input"
            android:layout_width="290dp"
            android:layout_height="48dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="670dp"
            android:background="@drawable/input_rectangle"
            android:hint="Price"
            android:fontFamily="@font/capriola"
            android:textSize="16dp"
            android:padding="10dp"
            android:textColor="#000"/>






    </RelativeLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="800dp"
        android:layout_weight="0"
        android:orientation="vertical">
    </LinearLayout>

    <View
        android:layout_width="380dp"
        android:layout_height="800dp" />
</LinearLayout>
