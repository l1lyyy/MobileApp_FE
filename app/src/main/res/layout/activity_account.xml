<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="800dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="@drawable/gradient_1">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="46dp"
            android:clickable="true">

            <View
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackground"/>

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/arrow_back"
                android:contentDescription="back_button"
                android:onClick="goToHomeActivity"/>
        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="110dp"
                android:src="@drawable/eclipse"
                android:layout_gravity="top|center_horizontal"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="320dp"
                android:text="Username"
                android:textColor="#1E1E1E"
                android:textSize="32sp"
                android:fontFamily="@font/capriola"
                android:letterSpacing="0.02"
                android:layout_gravity="top|center_horizontal"/>
        </FrameLayout>


        <ImageButton
            android:id="@+id/change_profile_button"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="410dp"
            android:background="@drawable/purple_rectangle"
            android:layout_gravity="top|start"
            android:contentDescription="change_profile"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="425dp"
            android:src="@drawable/pencil"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="415dp"
            android:clickable="true"
            android:fontFamily="@font/capriola"
            android:letterSpacing="0.05"
            android:padding="15dp"
            android:text="Change profile"
            android:textColor="#000000"
            android:textSize="20sp"/>


        <ImageButton
            android:id="@+id/security_button"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="485dp"
            android:background="@drawable/purple_rectangle"
            android:layout_gravity="top|start"
            android:contentDescription="security"/>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="500dp"
            android:src="@drawable/lock"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="490dp"
            android:clickable="true"
            android:fontFamily="@font/capriola"
            android:letterSpacing="0.05"
            android:padding="15dp"
            android:text="Security"
            android:textColor="#000000"
            android:textSize="20sp"/>

        <ImageButton
            android:id="@+id/contact_support_button"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="560dp"
            android:background="@drawable/purple_rectangle"
            android:layout_gravity="top|start"
            android:contentDescription="contact support"/>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="575dp"
            android:src="@drawable/alert"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="565dp"
            android:clickable="true"
            android:fontFamily="@font/capriola"
            android:letterSpacing="0.05"
            android:padding="15dp"
            android:text="Contact support"
            android:textColor="#000000"
            android:textSize="20sp"/>

        <ImageButton
            android:id="@+id/log_out_button"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="635dp"
            android:background="@drawable/purple_rectangle"
            android:layout_gravity="top|start"
            android:contentDescription="log_out"/>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="650dp"
            android:src="@drawable/log_out"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="640dp"
            android:clickable="true"
            android:fontFamily="@font/capriola"
            android:letterSpacing="0.05"
            android:padding="15dp"
            android:text="Log out"
            android:textColor="#000000"
            android:textSize="20sp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="800dp"
        android:layout_weight="0"
        android:orientation="vertical">
    </LinearLayout>

    <View
        android:layout_width="380dp"
        android:layout_height="800dp" />
</LinearLayout>
