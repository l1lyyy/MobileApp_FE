            android:contentDescription="icon_invoice"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="202dp"
            android:layout_marginTop="405dp"
            android:clickable="true"
            android:fontFamily="@font/capriola"
            android:padding="15dp"
            android:text="Sales invoice"
            android:textColor="#000000"
            android:textSize="14sp"/>

        <ImageButton
            android:id="@+id/receipt_button"
            android:layout_width="164dp"
            android:layout_height="164dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="488dp"
            android:fillColor="#FFFFFFFF"
            android:background="@drawable/square_button"
            android:layout_gravity="top|start"
            android:contentDescription="create_receipt"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="62dp"
            android:layout_marginTop="518dp"
            android:src="@drawable/receipt"
            android:clickable="true"
            android:contentDescription="icon_sales_receipt"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="591dp"
            android:clickable="true"
            android:fontFamily="@font/capriola"
            android:padding="15dp"
            android:text="Sales receipt"
            android:textColor="#000000"
            android:textSize="14sp"/>

        <ImageButton
            android:id="@+id/monthly_report_button"
            android:layout_width="164dp"
            android:layout_height="164dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="488dp"
            android:fillColor="#FFFFFFFF"
            android:background="@drawable/square_button"
            android:layout_gravity="top|start"
            android:contentDescription="monthly_report"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="228dp"
            android:layout_marginTop="520dp"
