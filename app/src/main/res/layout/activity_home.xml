<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="800dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="@drawable/gradient_1">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="691dp"
            android:src="@drawable/line" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="75dp"
            android:src="@drawable/line" />

        <ImageButton
            android:id="@+id/add_new_book_button"
            android:layout_width="164dp"
            android:layout_height="164dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="118dp"
            android:fillColor="#FFFFFFFF"
            android:background="@drawable/square_button"
            android:layout_gravity="top|start"
            android:contentDescription="add_new_book"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="152dp"
            android:src="@drawable/add_book"
            android:clickable="true"
            android:contentDescription="icon_add_new_book"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="220dp"
            android:clickable="true"
            android:fontFamily="@font/capriola"
            android:padding="15dp"
            android:text="Add new book"
            android:textColor="#000000"
            android:textSize="14sp"/>

        <ImageButton
            android:id="@+id/book_import_button"
            android:layout_width="164dp"
            android:layout_height="164dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="118dp"
            android:fillColor="#FFFFFFFF"
            android:background="@drawable/square_button"
            android:layout_gravity="top|start"
            android:contentDescription="import_books"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="138dp"
            android:src="@drawable/box"
            android:clickable="true"
            android:contentDescription="icon_import_books"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="220dp"
            android:clickable="true"
            android:fontFamily="@font/capriola"
            android:padding="15dp"
            android:text="Books import"
            android:textColor="#000000"
            android:textSize="14sp"/>

        <ImageButton
            android:id="@+id/search_book_button"
            android:layout_width="164dp"
            android:layout_height="164dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="303dp"
            android:fillColor="#FFFFFFFF"
            android:background="@drawable/square_button"
            android:layout_gravity="top|start"
            android:contentDescription="search_book"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="67dp"
            android:layout_marginTop="335dp"
            android:src="@drawable/search"
            android:clickable="true"
            android:contentDescription="search_book"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="405dp"
            android:clickable="true"
            android:fontFamily="@font/capriola"
            android:padding="15dp"
            android:text="Search books"
            android:textColor="#000000"
            android:textSize="14sp"/>

        <ImageButton
            android:id="@+id/sales_invoice_button"
            android:layout_width="164dp"
            android:layout_height="164dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="303dp"
            android:fillColor="#FFFFFFFF"
            android:background="@drawable/square_button"
            android:layout_gravity="top|start"
            android:contentDescription="create_sales_invoice"/>

        <ImageView
